    <script>
        // Wait for the DOM to load before initializing the map
        document.addEventListener("DOMContentLoaded", function() {
            // Initialize the map and set it to a specific location
            var map = L.map('map').setView([12.9716, 77.5946], 12); // Coordinates of Bangalore (change as needed)

            // Add OpenStreetMap tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Add a marker for demonstration at the set coordinates
            L.marker([12.9716, 77.5946]).addTo(map)
                .bindPopup("<b>Your Location</b><br>This is your current location.")
                .openPopup();
        });
    </script>
  
